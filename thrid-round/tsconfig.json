{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@themes": ["./src/themes"],
      "@api/*": ["./src/api/*"],
      "@lib/*": ["./src/lib/*"],
      "@database": ["./src/database"],
      "@database/*": ["./src/database/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@data/*": ["src/data/*"],
      "@entries/*": ["src/entries/*"],
      "@constants": ["./src/constants.ts"],
      "@types": ["./src/types.ts"],
      "@root/*": ["./src/*"]
    },
  },
  "include": ["./src/**/*", "declare.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
